<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomAutofillStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!-- Top App Bar -->
    <style name="TopAppbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Navigation Drawer -->
    <style name="DrawerMenuItem">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/passion_one</item>
    </style>

    <!-- Button -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:paddingHorizontal">50dp</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LinkButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:padding">0dp</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ButtonAnswer" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/black_10</item>
        <item name="android:textColor">@color/dark_charcoal</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- EditText -->
    <style name="EditText" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="fontFamily">@font/rubik_medium</item>
    </style>

    <!-- TextView -->
    <style name="Title" parent="Widget.AppCompat.Button">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textColor">@color/dark_charcoal</item>
    </style>

    <style name="SubTitle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textColor">@color/dark_charcoal</item>
    </style>

    <style name="Body" parent="Widget.AppCompat.Button">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textColor">@color/dark_charcoal</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/dark_charcoal</item>
    </style>

    <style name="TextEdit" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/passion_one_bold</item>
        <item name="android:textColor">@color/dark_charcoal</item>
        <item name="android:ems">10</item>
    </style>

</resources>