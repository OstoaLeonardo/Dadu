<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_15"
    tools:context=".PreguntasAle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Preguntas"
            android:textAppearance="@style/Title" />
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="¿Cuál es la capital de Francia?"
            android:textAppearance="@style/SubTitle"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text=" 00:00"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/answer1TextView"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_text"
            android:padding="8dp"
            android:text="a) Londres"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/answer2TextView"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_text"
            android:padding="8dp"
            android:text="b) París"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/answer3TextView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_text"
            android:padding="8dp"
            android:text="c) Madrid"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/answer4TextView"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_edit_text"
            android:padding="8dp"
            android:text="d) Berlín"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>