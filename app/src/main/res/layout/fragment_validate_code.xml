<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_15"
    tools:context=".ValidateCodeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <TextView
            android:id="@+id/lblWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="@string/reset_pass"
            android:textAppearance="@style/Title" />

        <TextView
            android:id="@+id/lblInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblWelcome"
            android:layout_marginBottom="40dp"
            android:text="@string/instruction_code"
            android:justificationMode="inter_word"
            android:textAppearance="@style/Text" />

        <TextView
            android:id="@+id/lblMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblInstruction"
            android:layout_marginBottom="20dp"
            android:text="@string/code"
            android:textAppearance="@style/Body" />

        <EditText
            android:id="@+id/txtCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblMail"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/code"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/TextEdit"
            android:textColor="@color/dark_charcoal" />

        <Button
            android:id="@+id/btnRecovery"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCode"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="@string/verify_code" />

        <Button
            android:id="@+id/btnCancelar"
            style="@style/TextButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRecovery"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_text_button"
            android:text="@string/txtCancel" />

    </RelativeLayout>

</ScrollView>