<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_15"
    tools:context=".NewPassFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp">

        <TextView
            android:id="@+id/lblWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="@string/change_pass"
            android:textAppearance="@style/Title" />

        <TextView
            android:id="@+id/lblInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblWelcome"
            android:layout_marginBottom="40dp"
            android:text="@string/instruction_pass"
            android:justificationMode="inter_word"
            android:textAppearance="@style/Text" />

        <TextView
            android:id="@+id/lblPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblInstruction"
            android:layout_marginBottom="20dp"
            android:text="@string/txtPass"
            android:textAppearance="@style/Body" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblPass"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/txtPass"
            android:inputType="textPassword"
            android:textAppearance="@style/TextEdit"
            android:textColor="@color/dark_charcoal" />

        <TextView
            android:id="@+id/lblCPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPass"
            android:layout_marginBottom="20dp"
            android:text="@string/txtCPass"
            android:textAppearance="@style/Body" />

        <EditText
            android:id="@+id/txtCPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCPass"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_edit_text"
            android:hint="@string/txtCPass"
            android:inputType="textPassword"
            android:textAppearance="@style/TextEdit"
            android:textColor="@color/dark_charcoal" />

        <Button
            android:id="@+id/btnReset"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtCPass"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="@string/change_pass" />

        <Button
            android:id="@+id/btnCancelar"
            style="@style/TextButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnReset"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_text_button"
            android:text="@string/txtCancel" />

    </RelativeLayout>

</ScrollView>